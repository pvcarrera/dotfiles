[user]
	email = vicapa99@gmail.com
	name = Pablo Vicente
[alias]
  st = status
  aa = add .
  co = checkout
  br = branch
  lg = log --oneline --decorate --all --graph
  gone = ! "git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs git branch -D"
[color]
	ui = true
[format]
	pretty = format:%C(blue black bold)%h%Creset %C(green bold)%s%Creset%C(yellow)%d%Creset [%C(cyan)%an%Creset] - %C(blue)%ar
[core]
	excludesfile = /Users/pvcarrera/.gitignore_global
	autocrlf = input
	editor = /usr/bin/vim
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
[push]
	default = simple
[merge]
	ff = only
[rebase]
	autosquash = true
[rerere]
	enabled = true
[web]
	browser = firefox
